---
import SiteItem from "./site-item.astro";

type Props = {
  label: string;
  data: string[];
};

const { label, data } = Astro.props;
---

<div id={label.replace(" ", "-")} class="items-section flex flex-col gap-2">
  <p
    class="text-xl border-b font-bold fixed mr-4 bg-background h-fit p-4 top-18 z-30 -ml-2 hidden shrink-0 md:sticky md:block w-full"
  >
    {label}
  </p>
  {data.map((item) => <SiteItem url={item} />)}
</div>
